<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.devnunu.zipcheck.ui.inputchecklist.item.TemplateItem" />

        <variable
            name="listener"
            type="com.devnunu.zipcheck.ui.inputchecklist.item.TemplateItemListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_padding_size_medium"
        android:background="@drawable/bg_mono000_radius_4dp"
        android:gravity="center_vertical"
        android:onClick="@{()->listener.onSelectTemplate(item.index)}"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_padding_size_large"
        android:paddingVertical="@dimen/margin_padding_size_medium">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{item.selected? @drawable/ic_check_box_24px : @drawable/ic_check_box_outline_blank_24px}"
            android:tint="@{item.selected? @color/emerald400 : @color/mono400 }"
            tools:src="@drawable/ic_check_box_24px"
            android:layout_marginRight="@dimen/margin_padding_size_medium"
            tools:tint="@color/emerald400" />>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_size_small"
                android:layout_weight="1"
                android:text="@{item.name}"
                android:textSize="@dimen/text_size_medium"
                tools:text="스윗홈" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.itemCountText}"
                android:textColor="@color/mono500"
                android:textSize="@dimen/text_size_small"
                tools:text="체크리스트 갯수 : 40개" />

        </LinearLayout>

    </LinearLayout>

</layout>