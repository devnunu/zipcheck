<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.devnunu.zipcheck.ui.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_padding_size_large"
        android:paddingTop="@dimen/margin_padding_size_large">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="집을 추가해보세요!" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_house"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:items="@{viewModel.houseList}"
            app:layoutManager="LinearLayoutManager"
            app:visibleIf="@{viewModel.haveHouse}"
            tools:itemCount="2"
            tools:listitem="@layout/item_home_house" />

        <com.google.android.material.button.MaterialButton
            style="@style/Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_size_xlarge"
            android:onClick="@{()->viewModel.onClickAddHouseBtn()}"
            android:text="집추가하기" />
        x
    </LinearLayout>
</layout>