<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="categoryName"
            type="String" />

        <variable
            name="item"
            type="com.devnunu.zipcheck.ui.inputtemplateitem.category.item.InputChecklistItem" />

        <variable
            name="listener"
            type="com.devnunu.zipcheck.ui.inputtemplateitem.category.InputTemplateItemListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/margin_padding_size_small">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{item.title}"
            tools:text="교통 및 편의 시설은 가까운가요" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_24px"
            android:onClick="@{()->listener.onClickRemoveChecklistItem(categoryName, item.index)}"/>

    </LinearLayout>
</layout>