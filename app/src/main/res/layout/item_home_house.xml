<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.devnunu.zipcheck.ui.home.item.HouseItem" />

        <variable
            name="listener"
            type="com.devnunu.zipcheck.ui.home.item.HouseItemListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mono000_radius_4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="@dimen/margin_padding_size_medium"
        android:gravity="center_vertical"
        android:onClick="@{()->listener.onClickHouseItem(item.id)}"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_padding_size_large"
        android:paddingVertical="@dimen/margin_padding_size_small">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/margin_padding_size_medium"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            tools:text="우리집" />

    </LinearLayout>
</layout>