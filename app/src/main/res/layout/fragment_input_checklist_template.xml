<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.devnunu.zipcheck.ui.template.CheckListTemplateViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_medium"
                android:text="체크리스트를 작성해 주세요" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_xlarge"
                android:clipToPadding="true"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                app:categoryNames="@{viewModel.categoryNameList}"
                app:checklist="@{viewModel.checklist}"
                app:layoutManager="LinearLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/item_input_checklist_template_category" />

        </LinearLayout>
    </ScrollView>
</layout>